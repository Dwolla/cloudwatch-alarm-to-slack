{
  "name": "cloudwatch-alarm-to-slack",
  "version": "1.0.0",
  "scripts": {
    "build": "sls webpack",
    "clean": "skripts clean src test scripts --pattern '*.js'",
    "deploy": "sls deploy",
    "invoke": "ENVIRONMENT=local sls invoke local --function func",
    "lint": "skripts lint",
    "jest": "ENVIRONMENT=test SLACK_WEBHOOK_URL=slack.com skripts test",
    "test": "npm run lint && npm run jest && ENVIRONMENT=test SLACK_WEBHOOK_URL=slack.com sls package",
    "watch": "npm run jest -- --watch"
  },
  "dependencies": {
    "async-retry": "^1.2.3",
    "axios": "^0.27.2",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.1",
    "aws-sdk": "^2.493.0",
    "dotenv": "16.0.3",
    "husky": "^3.0.0",
    "serverless": "3.22.0",
    "serverless-iam-roles-per-function": "^3.1.0",
    "serverless-webpack": "^5.3.5",
    "skripts": "^0.10.0",
    "ts-jest": "^26.5.0",
    "typescript": "^4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "skripts lint"
    }
  }
}
